{
  "extends": "../../node_modules/@microsoft/rush-stack-compiler-4.2/includes/tsconfig-web.json",
  "compilerOptions": {
    "target": "es6",
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "inlineSources": false,
    "strictNullChecks": false,
    "downlevelIteration": true,
    "noUnusedLocals": false,
    "typeRoots": [
      "../../node_modules/@types", "../../node_modules/@microsoft",
      "./node_modules/@types", "./node_modules/@microsoft"      
    ],
    "types": [
      "es6-promise",
      "webpack-env"
    ],
    "lib": [
      "es2020",
      "dom",
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}
